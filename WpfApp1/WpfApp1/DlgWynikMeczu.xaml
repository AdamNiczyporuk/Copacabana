<Window x:Class="WpfApp1.DlgWynikMeczu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DlgWynikMeczu" Height="200" Width="160"
        Background="LightBlue">
    <Grid>
        <TextBox x:Name="wynikGospodarzy" HorizontalAlignment="Left" Margin="19,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="wynikGości" HorizontalAlignment="Left" Margin="19,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Ustaw Wynik" HorizontalAlignment="Left" Margin="19,97,0,0" VerticalAlignment="Top" 
                Width="120"
                Click="UstawWynikMeczu"/>
        <TextBlock  HorizontalAlignment="Left" Margin="19,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pl-pl" Text="Wynik Gospodarzy:"/></TextBlock>
        <TextBlock  HorizontalAlignment="Left" Margin="19,50,0,0" TextWrapping="Wrap" Text="Wynik Gości:" VerticalAlignment="Top"/>
        <TextBlock x:Name="message" HorizontalAlignment="Left" Margin="19,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="32"/>

    </Grid>
</Window>
