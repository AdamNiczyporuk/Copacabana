<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="250" Content="Zobacz Sędziów" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top"
                Click="ZobaczSędziów"   />
        <Button Width="250" Content="Organizuj rozgrywki w siatkówkę" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top"
                Click="Siatkówka"/>
        <Button Width="250" Content="Organizuj rozgrywki w 2 ognie" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top"
                Click="DwaOgnie"/>
        <Button Width="250" Content="Organizuj rozgrywki w przeciąganie liny" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top"
                Click="PrzeciaganieLiny"/>
        <Button Width="250" Content="Zakończ Działanie" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top"
                Click="Zamykanie"/>

    </Grid>
</Window>
